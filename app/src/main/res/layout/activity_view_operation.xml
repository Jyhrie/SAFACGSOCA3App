<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewOperationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/btnAddIssuingDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Issuing Detail" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnViewNominalRoll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nominal Roll" />

            <Button
                android:id="@+id/btnViewAmmunition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ammunition" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvOperationName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Operation Name" />

        <TextView
            android:id="@+id/tvDateLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date Location" />

        <TextView
            android:id="@+id/tvKAH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Key Appointment Holder" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>