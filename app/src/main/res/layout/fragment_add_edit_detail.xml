<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:minWidth="500dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_height="wrap_content"
    android:id="@+id/fragment_add_edit_detail_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/etDetailName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:hint="Detail Name"
        android:inputType="textPersonName"
        android:text="" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_edit_issuing_detail_personnel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rv_edit_issuing_detail_personnel"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnSelectPersonnel"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:text="Select Personnel"
            android:theme="@style/Button.Light"/>

        <Button
            android:id="@+id/btnCreateDetail"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="10dp"
            android:text="Save Detail"
            android:theme="@style/Button.Light"/>
    </LinearLayout>


</LinearLayout>